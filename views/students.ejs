                              <!-- sections-main-sub-container-right-main-body : Absence -->
                              <%- include('./partials/student/absence'); %>
                              <!-- End sections-main-sub-container-right-main-body : Absence -->


                            
                              <!-- sections-main-sub-container-right-main-body : Finance -->
                              <%if (role === 'Admin') { %>
                              <%- include('./partials/student/finance'); %>
                              <% } %>
                             
