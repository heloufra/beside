                                                       <li data-val="<%= classes[i].Classe_Label %>"><%= classes[i].Classe_Label %></li>
                                                    <% } %>
                                                </ul>
                                              </div>
                                              </div>
                                              <div class="square-button square-button-minus">
                                                <img class="icon" src="assets/icons/minus.svg">
                                              </div>
                                            </div>
                                          </div>
                                        </div>

                                    </div>

                                    <div class="filter-sections-dropdowns-container">

                                        <div class="dynamic-form-input-dropdown-container">
                                          <div class="dynamic-form-input-dropdown dynamic-form-input-first">
                                            <div class="dynamic-form-input">
                                              <div class="dynamic-form-input-float-adjust">
                                              <div class="form-group group form-group-right ">
                                                <input type="text" class="input-dropdown" name="expense" placeholder="Expences"  required>
                                                <img class="icon button-icon" src="assets/icons/caret.svg">
                                                <ul class="dynamic-form-input-dropdown-options" id="expenses-filter">
                                                  <li data-val="All">All</li>
                                                    <%if (locals.expenses) { %>
                                                       <% for(var i=0; i<expenses.length; i++) {%>
                                                         <li data-expenseid="<%= expenses[i].Expense_ID %>" data-val="<%= expenses[i].Expense_Label %>"><%= expenses[i].Expense_Label %></li>
                                                      <% } %>
                                                    <% } %>
                                                </ul>
                                              </div>
                                              </div>
                                              <div class="square-button square-button-minus">
                                                <img class="icon" src="assets/icons/minus.svg">
                                              </div>
                                            </div>
                                          </div>
                                        </div>

                                    </div>

                                    <div class="filter-sections-checkboxes-container">
                                        
                                        <div class="sections-label-checkbox-main-container">
                                          <div class="sections-label-checkbox-container">
                                            <div class="form-group group ">
                                              <span class="expense_label">Unpaid</span>
                                            </div>
                                          </div>
                                          <div class="customCheck">
                                            <input type="checkbox" value="" name="checkbox" id="unpaid" checked=""/>
                                            <label for="unpaid"></label>
                                          </div>
                                        </div>

                                        
                                        <div class="sections-label-checkbox-main-container">
                                          <div class="sections-label-checkbox-container">
                                            <div class="form-group group ">
                                              <span class="expense_label">Paid</span>
                                            </div>
                                          </div>
                                          <div class="customCheck">
                                            <input type="checkbox" value="" name="checkbox" id="paid" checked="" />
                                            <label for="paid"></label>
                                          </div>
                                        </div>


                                        <div class="sections-label-checkbox-main-container">
                                          <div class="sections-label-checkbox-container">
                                            <div class="form-group group ">
                                              <span class="expense_label">Monthly</span>
                                            </div>
                                          </div>
                                          <div class="customCheck">
                                            <input type="checkbox" value="" name="checkbox" id="monthly" checked=""/>
                                            <label for="monthly"></label>
                                          </div>
                                        </div>


                                        <div class="sections-label-checkbox-main-container">
                                          <div class="sections-label-checkbox-container">
                                            <div class="form-group group ">
                                              <span class="expense_label">Yearly</span>
                                            </div>
                                          </div>
                                          <div class="customCheck">
                                            <input type="checkbox" value="" name="checkbox" id="yearly" checked="" />
                                            <label for="yearly"></label> 
                                          </div>
                                        </div>

                                    </div>

                                    <div class="filter-sections-search-container">

                                          <div class="dynamic-form-input-dropdown-container">
                                            <div class="dynamic-form-input-dropdown "> <!-- dynamic-form-input-first for full width inputs -->
                                              <div class="dynamic-form-input">

                                                <div class="dynamic-form-input-float-adjust">

                                                  <div class="form-group group form-group-right">
                                                     <input type="text" id="search-input" class="input-text" required="" placeholder="Search">
                                                     <img class="icon button-icon caret-disable-rotate" src="assets/icons/sidebar_icons/search.svg">
                                                  </div>

                                                </div>

                                              </div>
                                            </div>
                                          </div>
                                        

                                    </div>
                                    
                                  </div>

                            </div>
